{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",  // Correct JSX mode for React Native
    "moduleResolution": "node",
    "target": "esnext",     // Latest JavaScript target
    "lib": ["esnext"],
    "skipLibCheck": true,
    "allowJs": true,        // Allows mixing JS and TS files if needed
    "esModuleInterop": true,
    "noEmit": true          // Prevents TypeScript from emitting compiled JS files
  },
  "include": ["**/*.ts", "**/*.tsx"], // Includes .ts and .tsx files
  "exclude": ["node_modules"]
}
